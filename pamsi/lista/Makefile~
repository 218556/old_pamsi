CXXFLAGS=-g -Iinc -Wall -pedantic -std=c++0x

__start__: obroty_2D
	./obroty_2D

obroty_2D: obj obj/main.o obj/Prostokat.o obj/Macierz2x2.o obj/Wektor2D.o\
           obj/lacze_do_gnuplota.o obj/Menu.o obj/Zapis.o
	g++ -Wall -pedantic -std=c++0x obj/main.o obj/Wektor2D.o\
                        obj/Macierz2x2.o obj/Prostokat.o obj/lacze_do_gnuplota.o obj/Menu.o obj/Zapis.o -o obroty_2D

obj:
	mkdir obj


obj/lacze_do_gnuplota.o: inc/lacze_do_gnuplota.hh src/lacze_do_gnuplota.cpp
	g++ -c ${CXXFLAGS} -o obj/lacze_do_gnuplota.o src/lacze_do_gnuplota.cpp

obj/main.o: src/main.cpp inc/Prostokat.hh inc/Macierz2x2.hh inc/Wektor2D.hh inc/Menu.hh inc/Zapis.hh
	g++ -c ${CXXFLAGS} -o obj/main.o src/main.cpp

obj/Zapis.o: src/Zapis.cpp inc/Zapis.hh
	g++ -c ${CXXFLAGS} -o obj/Zapis.o src/Zapis.cpp

obj/Menu.o: src/Menu.cpp inc/Menu.hh
	g++ -c ${CXXFLAGS} -o obj/Menu.o src/Menu.cpp

obj/Prostokat.o: src/Prostokat.cpp inc/Wektor2D.hh inc/Macierz2x2.hh inc/Prostokat.hh
	g++ -c ${CXXFLAGS} -o obj/Prostokat.o src/Prostokat.cpp

obj/Macierz2x2.o: src/Macierz2x2.cpp inc/Wektor2D.hh inc/Macierz2x2.hh
	g++ -c ${CXXFLAGS} -o obj/Macierz2x2.o src/Macierz2x2.cpp

obj/Wektor2D.o: src/Wektor2D.cpp inc/Wektor2D.hh inc/Macierz2x2.hh
	g++ -c ${CXXFLAGS} -o obj/Wektor2D.o src/Wektor2D.cpp

clean:
	rm -f obj/*.o obroty_2D
